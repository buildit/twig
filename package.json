{
  "name": "twig",
  "version": "3.4.0",
  "license": "Apache-2.0",
  "angular-cli": {},
  "scripts": {
    "build": "ng build",
    "build:prod": "ng build --progress=false --prod",
    "serve": "ng serve",
    "lint": "npm run tslint && npm run sasslint",
    "tslint": "tslint -p ./src/ \"src/**/*.ts\"",
    "sasslint": "sass-lint -v",
    "test": "ng test --code-coverage",
    "test:ci": "ng test --progress=false --single-run --code-coverage",
    "start": "npm run serve",
    "pree2e": "webdriver-manager update --versions.chrome 2.32",
    "test:e2e": "ng e2e",
    "test:e2e:ci": "ng e2e --serve false",
    "version": "git add package.json",
    "postversion": "git push --no-verify && git push origin HEAD:master --no-verify && git push --tags --no-verify",
    "validate": "npm ls",
    "postinstall": "check-node-version --node ${npm_package_engines_node}"
  },
  "engines": {
    "node": "^8.1.3"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "4.4.4",
    "@angular/common": "4.4.4",
    "@angular/compiler": "4.4.4",
    "@angular/compiler-cli": "4.4.4",
    "@angular/core": "4.4.4",
    "@angular/forms": "4.4.4",
    "@angular/http": "4.4.4",
    "@angular/platform-browser": "4.4.4",
    "@angular/platform-browser-dynamic": "4.4.4",
    "@angular/platform-server": "4.4.4",
    "@angular/router": "4.4.4",
    "@ng-bootstrap/ng-bootstrap": "^1.0.0-beta.5",
    "angular2-autosize": "1.0.1",
    "angular2-uuid": "1.1.1",
    "bootstrap": "4.0.0-beta",
    "bound-sensor": "^0.1.6",
    "core-js": "2.4.1",
    "d3-ng2-service": "1.15.0",
    "dragula": "3.7.2",
    "font-awesome": "4.7.0",
    "hammerjs": "2.0.8",
    "immutable": "3.8.1",
    "markdown-to-html-pipe": "1.2.1",
    "moment": "2.18.1",
    "ng-trim-value-accessor": "0.1.0",
    "ng2-dragula": "1.5.0",
    "ng2-select": "^1.2.0",
    "ng2-toastr": "4.1.2",
    "ramda": "0.24.1",
    "rxjs": "5.4.2",
    "ts-helpers": "1.1.2",
    "typescript": "2.3.3",
    "valid-url": "1.0.9",
    "zone.js": "0.8.12"
  },
  "devDependencies": {
    "@angular/cli": "1.4.2",
    "@types/hammerjs": "2.0.35",
    "@types/jasmine": "2.5.45",
    "@types/node": "8.0.28",
    "@types/ramda": "0.24.11",
    "check-node-version": "2.1.0",
    "codelyzer": "3.2.0",
    "istanbul": "0.4.5",
    "jasmine-core": "2.8.0",
    "jasmine-expect": "3.7.1",
    "jasmine-reporters": "2.2.1",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "1.7.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage": "1.1.1",
    "karma-coverage-istanbul-reporter": "1.3.0",
    "karma-istanbul-threshold": "^1.2.2",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-html-reporter": "0.2.2",
    "karma-junit-reporter": "1.2.0",
    "karma-spec-reporter": "0.0.31",
    "pre-commit": "1.2.2",
    "pre-push": "0.1.1",
    "protractor": "5.1.2",
    "protractor-jasmine2-screenshot-reporter": "0.4.1",
    "raw-loader": "0.5.1",
    "remap-istanbul": "0.9.5",
    "sass-lint": "1.11.1",
    "ts-node": "3.3.0",
    "tslint": "5.7.0",
    "webdriver-manager": "12.0.6"
  },
  "pre-commit": [
    "lint"
  ],
  "pre-push": [
    "build:prod",
    "test:ci",
    "test:e2e"
  ]
}
